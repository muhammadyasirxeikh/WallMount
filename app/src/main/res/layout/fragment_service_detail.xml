<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.Services.response.ServiceDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white">
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/image_slide_cv"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ripple_bg_selector"
                app:cardUseCompatPadding="true"
                >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/service_1"
        android:background="@drawable/round_background"
        android:scaleType="fitXY"

        android:id="@+id/service_image"
        />
            </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/catName01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opebsans_bold"

        android:layout_marginTop="20dp"
        android:text="Harlem Shake"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/image_slide_cv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$35.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/service_charges"
        android:fontFamily="@font/opebsans_bold"
        app:layout_constraintTop_toTopOf="@id/catName01"
        app:layout_constraintBottom_toBottomOf="@id/catName01"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our dry cleaning professionals review individual care labels to determine the appropriate cleaning method. Clothing is then pressed to perfection using our state- of-the-art tensioning equipment and finishing techniques."
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:id="@+id/service_detail"
        app:layout_constraintTop_toBottomOf="@id/catName01"
        android:fontFamily="@font/opebsans_medium"
        android:padding="5dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/service_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="100dp"
        android:background="@drawable/round_background"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/phone_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please call"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/phone_icon"
            android:fontFamily="@font/opebsans_bold"
            android:id="@+id/pl_tv"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="770-331-2897"
            app:layout_constraintTop_toBottomOf="@id/pl_tv"
            app:layout_constraintStart_toEndOf="@id/phone_icon"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/opebsans_medium"
            android:textSize="12sp"
            android:id="@+id/phone_number"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>