<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.feedback.FeedBackFragment">
    <TextView
        android:id="@+id/leave_review_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opebsans_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Leave a Review"

        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/leave_review_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/close_icon"
        android:id="@+id/close"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="1dp"
        android:background="@drawable/round_circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leave_review_tv"
        android:src="@drawable/user_test_image"
        android:id="@+id/user_image"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sarah Williams"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/opebsans_bold"
        android:id="@+id/user_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="479 4th Ave, Brooklyn, NY 11215"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/opebsans_regular"
        android:id="@+id/address_tv"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/review_recycler"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/address_tv"
        app:layout_constraintBottom_toTopOf="@id/submit_tv"
        android:scrollbars="none"
        />

    <TextView
        android:id="@+id/submit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opebsans_semibold"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/solidgreenbackground"
        android:text="Submit Review"

        android:textColor="@color/white"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="17sp"
        android:layout_marginBottom="40dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>