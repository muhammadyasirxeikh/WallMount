<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.password.PasswordFragment">


    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/password_screen_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:id="@+id/top_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_image"
        android:text="WELCOME"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"

        android:textColor="@color/black"
        android:fontFamily="@font/opebsans_bold"
        android:id="@+id/welcome_tv"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/welcome_tv"
        app:layout_constraintBottom_toBottomOf="@id/welcome_tv"
        android:src="@drawable/hand_icon"
        app:layout_constraintStart_toEndOf="@id/welcome_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"

        android:text="Please enter your 6 digit Pin Code used to \nset up your account"
        android:textSize="18sp"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:fontFamily="@font/opensans_condensed_semibold"
        android:id="@+id/host_message_tv"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/host_message_tv"
        app:layout_constraintEnd_toEndOf="@id/host_message_tv"
        android:layout_marginTop="40dp"
        android:layout_height="21dp"
        app:layout_constraintTop_toBottomOf="@id/host_message_tv"
        android:weightSum="6"
        android:id="@+id/password_layout"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p2"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p3"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p4"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p5"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/white_circle"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/p6"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/password_layout"
        app:layout_constraintStart_toStartOf="@id/password_layout"
        app:layout_constraintEnd_toEndOf="@id/password_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:weightSum="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/number_layout1"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.6"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:id="@+id/tv1"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/tv2"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                android:id="@+id/tv3"
                android:fontFamily="@font/opebsans_semibold"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:background="@drawable/white_circle"
                android:padding="20dp"

                android:textColor="@color/black"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"

            android:weightSum="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/number_layout2"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.6"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/tv4"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/tv5"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/tv6"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:background="@drawable/white_circle"
                android:padding="20dp"

                android:textColor="@color/black"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"

            android:weightSum="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/number_layout3"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.6"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/tv7"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/tv8"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/tv9"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:background="@drawable/white_circle"
                android:padding="20dp"

                android:textColor="@color/black"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/number_layout4"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_margin="15dp"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.6"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/tv0"
                android:textAlignment="center"
                android:background="@drawable/white_circle"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/clear"
                android:textSize="20sp"
                android:fontFamily="@font/opebsans_semibold"

                android:layout_margin="15dp"
                android:background="@drawable/group"
                android:padding="25dp"

                app:tint="#252525" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>